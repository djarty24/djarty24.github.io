<body class="bg-gray-900 m-auto w-10/12 sm:w-4/5 md:w-2/3">
	<Header />
	<main>
		<article>
			<div class="prose">
				<div class="title">
					<div class="date">
                        <h1>{title}</h1>
						<FormattedDate date={pubDate} />
						{
							updatedDate && (
								<div class="last-updated-on">
									Last updated on{" "}
									<FormattedDate date={updatedDate} />
								</div>
							)
						}
					</div>
					<hr />
				</div>
				<slot />
			</div>
		</article>
	</main>
	<Footer />
</body>

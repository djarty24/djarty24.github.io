---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="bg-gray-900 m-auto w-10/12 sm:w-4/5 md:w-2/3">
    <Header />
    <main
      class="h-[90vh] flex justify-center items-center"
    >
      <div class="">
        <h5 class="text-base text-gray-400">HI THERE, I'M REVATI.</h5>
        <h1 class="text-gray-200 lg:leading-snug py-4">
          I'm a student, designer, and developer, with a passion for programming,
          airplanes, and all things music.
        </h1>
        <div class="text-gray-400 hover:text-gray-200 pb-3">
          <a href="https://github.com/djarty24" target="_blank">
            <svg
              viewBox="0 0 16 16"
              aria-hidden="true"
              width="32"
              height="32"
